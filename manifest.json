{
  "manifest_version": 3,
  "name": "Dark Session Manager",
  "description": "A session manager that respects your eyes",
  "version": "1.00",
  "icons": {
    "16": "imgs/dark16.png",
    "32": "imgs/dark32.png",
    "48": "imgs/dark48.png",
    "128": "imgs/dark128.png"
  },
  "action": {
    "default_icon": {
      "16": "imgs/dark16.png",
      "32": "imgs/dark32.png",
      "48": "imgs/dark48.png",
      "128": "imgs/dark128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "file://*.pdf"
      ],
      "run_at": "document_idle",
      "js": [
        "content-script.js"
      ]
    }
  ],
  "host_permissions": [
    "file://*.pdf"
  ]
}